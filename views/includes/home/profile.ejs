<div class="modal fade" id="user-profile-modal" role="dialog">
  <div class="modal-dialog modal-lg">
      <div class="modal-content">
          <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Tài khoản cá nhân</h4>
          </div>
          <div class="modal-body">
              <ul class="nav nav-tabs">
                  <li class="active"><a data-toggle="tab" href="#seting-profile">Cài đặt chung</a></li>
                  <li><a data-toggle="tab" id="link-to-password-profile" href="#password-profile">Quản lý mật khẩu</a></li>
              </ul>
              <div class="tab-content">
                  <div id="seting-profile" class="tab-pane fade in active">
                      <div class="row">
                          <form class="form-horizontal" method="post" role="form" action="">
                              <!-- left column -->
                              <div class="col-md-3">
                                  <div class="text-center" id="div-update-avatar">
                                      <div id="image-edit-profile">
                                          <img src="<%= user.avatar%>" id="preview-image"  class="avatar img-circle" alt="avatar">
                                      </div>
                                      <h6>Tải lên một ảnh mới...</h6>
                                      <input type="file" class="form-control" id="input-change-avatar" name="avatar"><br>
                                      <div id="show-button-update-avatar"></div>
                                  </div>
                              </div>
                              <!-- edit form column -->
                              <div class="col-md-9 personal-info">
                                  <div class="alert alert-danger alert-dismissable error-upload">
                                      <a class="panel-close close" data-dismiss="alert">×</a>
                                      <span>Update user error example.</span><br>
                                      <!-- <script>openProfileModal();</script> -->
                                  </div>
                                  <div class="alert alert-success alert-dismissable success-upload">
                                      <a class="panel-close close" data-dismiss="alert">×</a>
                                      <span>Update user success example.</span><br>
                                      <!-- <script>openProfileModal();</script> -->
                                  </div>
                                  <% if(user.facebook.email){%>
                                    <h3>Facebook account.</h3>
                                  <%}%>
                                  <% if(user.google.email){%>
                                    <h3>Google account.</h3>
                                  <%}%>
                                  <% if(user.local.email){%>
                                    <h3>Local account.</h3>
                                  <%}%>
                                  <br>
                                  <div class="form-group">
                                      <label class="col-lg-3 control-label">Email:</label>
                                      <div class="col-lg-8">
                                        
                                          <% if(user.facebook.email){%>
                                            <div class="form-control" disabled><%= user.facebook.email %></div>
                                          <%}%>
                                          <% if(user.google.email){%>
                                            <div class="form-control" disabled><%= user.google.email %></div>
                                          <%}%>
                                          <% if(user.local.email){%>
                                            <div class="form-control" disabled><%= user.local.email %></div>
                                          <%}%>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-md-3 control-label">Username:</label>
                                      <div class="col-md-8">
                                          <input class="form-control" id="input-change-name" type="text" name="username" value="<%= user.userName%>">
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-3 control-label">Giới tính:</label>
                                      <div class="col-lg-8">
                                        <% if(user.gender=='male'){%>
                                          <label class="radio-inline col-lg-2">Nam
                                              <input id="input-change-male" type="radio" name="gender" value="male" checked required>
                                              <span class="checkmark"></span>
                                          </label>
                                          <label class="radio-inline col-lg-2">Nữ
                                              <input type="radio" id="input-change-female" name="gender" value="female" required>
                                              <span class="checkmark"></span>
                                          </label>
                                        <%}%>
                                        <% if(user.gender!='male'){%>
                                          <label class="radio-inline col-lg-2">Nam
                                              <input type="radio" id="input-change-male" name="gender" value="male"  required>
                                              <span class="checkmark"></span>
                                          </label>
                                          <label class="radio-inline col-lg-2">Nữ
                                              <input type="radio" id="input-change-female" name="gender" value="female" checked required>
                                              <span class="checkmark"></span>
                                          </label>
                                        <%}%>
                                          
                                          
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-3 control-label">Địa chỉ:</label>
                                      <div class="col-lg-8">
                                          <input class="form-control" id="input-change-address" type="text" name="address" value="<%= user.address%>">
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-lg-3 control-label">Số điện thoại:</label>
                                      <div class="col-lg-8">
                                          <input class="form-control" id="input-change-phone" type="text" name="phone" value="<%= user.phone%>">
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-md-3 control-label"></label>
                                      <div class="col-md-8">
                                          <input type="button" id="button-save" class="btn btn-primary custom-background-btn-primary" name="submit" value="Lưu lại">
                                          <span></span>
                                          <input type="button" id= "button-remove" class="btn btn-default custom-background-btn-reset" value="Hủy bỏ">
                                      </div>
                                  </div>
                              </div>
                          </form>
                      </div>
                  </div>
                  <% if(user.local.email){%>
                     <% include ./password%>
                  <%}%> 
              </div>
          </div>
      </div>
  </div>
</div>